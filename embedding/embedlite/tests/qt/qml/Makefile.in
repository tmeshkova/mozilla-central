DEPTH           = @DEPTH@
topsrcdir       = @top_srcdir@
srcdir          = @srcdir@
VPATH           = @srcdir@
relativesrcdir  = @relativesrcdir@
VPATH += \
  $(NULL)

include $(DEPTH)/config/autoconf.mk

MODULE = qmlMozEmbedTest

STL_FLAGS=
DEFINES += -DXPCOM_GLUE

PROGRAM = qmlMozEmbedTest$(BIN_SUFFIX)

MOCSRCS = \
    moc_qmlapplicationviewer.cpp \
    $(NULL)

RCCSRCS = \
    qrc_qmlMozEmbedTest.cpp
    $(NULL)

HEADERS += \
    $(NULL)

CPPSRCS += \
    $(MOCSRCS) \
    $(RCCSRCS) \
    main.cpp \
    qmlapplicationviewer.cpp \
    $(NULL)

LOCAL_INCLUDES	= -I$(srcdir) \
    $(TK_CFLAGS) \
    -I/usr/include/qt4/QtDeclarative \
    -I/usr/include/QtDeclarative \
    -I$(srcdir)/../qtwidget \
    $(NULL)

LIBS += \
    $(TK_LIBS) \
    -lQtDeclarative \
    -lGLESv2 \
    -lqjson \
    $(LIBXUL_DIST)/lib/$(LIB_PREFIX)qtembedwidget.$(LIB_SUFFIX) \
    $(NULL)

LIBS += \
    $(XPCOM_STANDALONE_GLUE_LDOPTS) \
    $(NULL)

ifeq (1 ,$(MOZ_X11))
    LIBS += \
    -lX11 \
    $(NULL)
endif

NSDISTMODE = copy
PARALLEL_DIRS += components
include $(topsrcdir)/config/rules.mk

GARBAGE += \
    $(MOCSRCS) \
    $(RCCSRCS) \
    $(NULL)
