DEPTH           = @DEPTH@
topsrcdir       = @top_srcdir@
srcdir          = @srcdir@
VPATH           = @srcdir@
relativesrcdir  = @relativesrcdir@
VPATH += \
  $(srcdir) \
  $(srcdir)/embedhelpers \
  $(srcdir)/utils \
  $(srcdir)/embedthread \
  $(NULL)

include $(DEPTH)/config/autoconf.mk

MODULE = embedlite
XPIDL_MODULE = embedlite
MODULE_NAME = embedlite
GRE_MODULE = 1

LIBXUL_LIBRARY = 1
EXPORT_LIBRARY = 1
IS_COMPONENT = 1

LIBRARY_NAME = embedlite

EXPORTS_NAMESPACES = mozilla/embedlite IPC
EXPORTS_mozilla/embedlite = \
    EmbedInitGlue.h \
    EmbedLiteAPI.h \
    EmbedLiteApp.h \
    EmbedLiteView.h \
    EmbedLog.h \
    $(NULL)

EXPORTS_IPC = \
    InputDataIPC.h \
    $(NULL)

CPPSRCS = \
    EmbedLiteApp.cpp \
    EmbedLiteUILoop.cpp \
    EmbedLiteSubThread.cpp \
    EmbedLiteAppThread.cpp \
    EmbedLiteAppThreadParent.cpp \
    EmbedLiteAppThreadChild.cpp \
    EmbedLiteView.cpp \
    EmbedLiteViewThreadParent.cpp \
    EmbedLiteViewThreadChild.cpp \
    EmbedLitePuppetWidget.cpp \
    EmbedLiteCompositorParent.cpp \
    EmbedLiteViewScrolling.cpp \
    TabChildHelper.cpp \
    WebBrowserChrome.cpp \
    GeckoLoader.cpp \
    DirProvider.cpp \
    WindowCreator.cpp \
    EmbedLog.cpp \
    $(NULL)

XPIDLSRCS = \
    nsIEmbedBrowserChromeListener.idl \
    $(NULL)

LOCAL_INCLUDES += \
    -I$(srcdir)/utils \
    -I$(srcdir)/embedhelpers \
    -I$(srcdir)/embedthread \
    -I$(topsrcdir)/widget/xpwidgets \
    -I$(topsrcdir)/dom/base \
    -I$(topsrcdir)/dom/ipc \
    $(NULL)

DIRS += tests

DEFINES += -DEMBED_LITE_INTERNAL=1

include $(topsrcdir)/config/config.mk
include $(topsrcdir)/config/rules.mk
include $(topsrcdir)/ipc/chromium/chromium-config.mk
